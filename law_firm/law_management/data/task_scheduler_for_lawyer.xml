<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record forcecreate="True" id="ir_cron_task_lawyer" model="ir.cron">
            <field name="name">Task Schedular for Lawyer</field>
            <field name="model_id" ref="model_project_task"/>
            <field name="state">code</field>
            <field name="code">model.send_task_secheduler_email_lawyer()</field>
            <field eval="True" name="active"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field eval="'send_task_secheduler_email_lawyer'" name="function"/>
            <field eval="'()'" name="args"/>
        </record>

    </data>
</odoo>