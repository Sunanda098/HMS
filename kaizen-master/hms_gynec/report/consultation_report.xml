        <report id="hms_consultation_report_id"
            string="Consultation Report"
            model="hms.appointment"
            report_type="qweb-pdf"
            file="hms_gynec.hms_consultation_report"
            name="hms_gynec.hms_consultation_report"/>

    </data>
</openerp>
